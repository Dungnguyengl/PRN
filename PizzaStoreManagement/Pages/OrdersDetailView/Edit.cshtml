@page
@model PizzaStoreManagement.Pages.OrdersDetailView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrderDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetails.OrderId" />
            <input type="hidden" asp-for="OrderDetails.ProductId" />
            <div class="form-group">
                <label asp-for="OrderDetails.OrderId" class="control-label"></label>
                <input asp-for="OrderDetails.OrderId" class="form-control" disabled="true" />
                <span asp-validation-for="OrderDetails.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetails.ProductId" class="control-label"></label>
                <select id="ProductId" asp-for="OrderDetails.ProductId" class="form-control" asp-items="ViewBag.ProductId" disabled="true"></select>
                <span asp-validation-for="OrderDetails.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetails.UnitPrice" class="control-label"></label>
                <input id="UnitPrice" class="form-control" asp-for="ProductPrice" disabled="true" />
                <span asp-validation-for="OrderDetails.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetails.Quantity" class="control-label"></label>
                <input asp-for="OrderDetails.Quantity" class="form-control" />
                <span asp-validation-for="OrderDetails.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-id="@Model.OrderId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
