@page
@model PizzaStoreManagement.Pages.OrdersDetailView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.OrderId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails[0].Products)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Products.ProductName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OrderId" asp-route-productId="@item.ProductId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.OrderId" asp-route-productId="@item.ProductId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.OrderId" asp-route-productId="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
