@page
@model PizzaStoreManagement.Pages.AccountsView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Accounts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Accounts.AccountId" />
            <div class="form-group">
                <label asp-for="Accounts.UserName" class="control-label"></label>
                <input asp-for="Accounts.UserName" class="form-control" />
                <span asp-validation-for="Accounts.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accounts.Password" class="control-label"></label>
                <input asp-for="Accounts.Password" class="form-control"/>
                <span asp-validation-for="Accounts.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accounts.FullName" class="control-label"></label>
                <input asp-for="Accounts.FullName" class="form-control" />
                <span asp-validation-for="Accounts.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accounts.Type" class="control-label"></label>
                <select asp-for="Accounts.Type" class="form-control" asp-items="Model.AccountTypes"></select>
                <span asp-validation-for="Accounts.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
